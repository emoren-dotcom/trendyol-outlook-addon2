<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <Id>12345678-abcd-1234-abcd-1234567890ab</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Test Addin</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Basit Uyarı Eklentisi"/>
  <Description DefaultValue="Dosya eklendiğinde uyarı gösteren basit bir add-in."/>
  <IconUrl DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/icon-32.png"/>
  <SupportUrl DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/support.html"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Resources>
    <bt:Urls>
      <bt:Url id="commandUrl" DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/command.html"/>
    </bt:Urls>
  </Resources>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="Mailbox">
        <DesktopFormFactor>
          <FunctionFile resid="commandUrl" />
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="Message">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="showWarningBtn">
                  <Label resid="buttonLabel"/>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="commandUrl"/>
                  </Action>
                  <Supertip>
                    <Title resid="buttonLabel"/>
                    <Description resid="buttonDescription"/>
                  </Supertip>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="commandUrl" DefaultValue="https://emoren-dotcom.github.io/trendyol-outlook-addon2/command.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Eklenti Grubu"/>
        <bt:String id="buttonLabel" DefaultValue="Uyarı Göster"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="buttonDescription" DefaultValue="Ekleme yapıldığında uyarı gösterir"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
